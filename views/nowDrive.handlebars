                    <li><a href="/">Logout</a></li>
                </ul>
            </div>
            <div class="nav navbar-nav">
                <h2>WEHAUL</h2>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>Current Ride Requests</h1>
        {{#each rides}}
            <div class="panel panel-default ride">
                <img src="{{pic}}" class="detailsImage">
                <h4><b>{{name}}</b></h4>
                <p><b>Current Location:</b> {{start}}</p>
                <p><b>Destination:</b> {{end}}</p>
                <p><b>Distance from You:</b> {{distance}} miles</p>
            </div>
        {{/each}}
    </div>


    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/bootstrap.js"></script>
</body>
</html>